{
  "root": true,
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "overrides": [
    {
      "files": ["apps_script_project/**/*.js", "apps_script_project/**/*.gs"],
      "env": {
        "es6": true
      },
      "globals": {
        "AdminDirectory": "readonly",
        "CacheService": "readonly",
        "DriveApp": "readonly",
        "HtmlService": "readonly",
        "LockService": "readonly",
        "Logger": "readonly",
        "MailApp": "readonly",
        "PropertiesService": "readonly",
        "Session": "readonly",
        "SpreadsheetApp": "readonly",
        "UrlFetchApp": "readonly",
        "Utilities": "readonly",
        "ScriptApp": "readonly"
      },
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off"
      }
    },
    {
      "files": ["jest.config.js", "tests/**/*.js"],
      "env": {
        "node": true,
        "jest": true
      },
      "rules": {
        "no-undef": "error"
      }
    }
  ]
}
